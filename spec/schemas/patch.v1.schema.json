{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.com/bdir/patch.v1.schema.json",
  "title": "BDIR Patch v1",
  "description": "Normative schema for BDIR Patch Protocol v1 (RFC-0001).",
  "type": "object",
  "additionalProperties": false,

  "required": ["v", "h", "ops"],

  "properties": {
    "v": {
      "type": "integer",
      "const": 1,
      "description": "Patch protocol version."
    },

    "h": {
      "type": "string",
      "minLength": 1,
      "description": "Page-level content hash binding."
    },

    "ha": {
      "type": "string",
      "minLength": 1,
      "default": "sha256",
      "description": "Hash algorithm identifier (defaults to sha256)."
    },

    "ops": {
      "type": "array",
      "minItems": 1,
      "items": { "$ref": "#/$defs/operation" }
    }
  },

  "$defs": {
    "block_id": {
      "type": "string",
      "minLength": 1
    },

    "kind_code": {
      "type": "integer",
      "minimum": 0,
      "maximum": 99
    },

    "operation": {
      "type": "object",
      "additionalProperties": false,
      "required": ["op"],

      "properties": {
        "op": {
          "type": "string",
          "enum": ["replace", "delete", "insert_after", "suggest"]
        }
      },

      "allOf": [
        {
          "if": {
            "properties": { "op": { "const": "replace" } }
          },
          "then": {
            "required": ["block_id", "before", "after"],
            "properties": {
              "block_id": { "$ref": "#/$defs/block_id" },
              "blockId": { "$ref": "#/$defs/block_id" },

              "before": { "type": "string", "minLength": 1 },
              "after": { "type": "string" },

              "occurrence": {
                "type": "integer",
                "minimum": 1
              }
            }
          }
        },

        {
          "if": {
            "properties": { "op": { "const": "delete" } }
          },
          "then": {
            "required": ["block_id", "before"],
            "properties": {
              "block_id": { "$ref": "#/$defs/block_id" },
              "blockId": { "$ref": "#/$defs/block_id" },

              "before": { "type": "string", "minLength": 1 },

              "occurrence": {
                "type": "integer",
                "minimum": 1
              }
            }
          }
        },

        {
          "if": {
            "properties": { "op": { "const": "insert_after" } }
          },
          "then": {
            "required": ["block_id", "new_block_id", "kind_code", "text"],
            "properties": {
              "block_id": { "$ref": "#/$defs/block_id" },
              "blockId": { "$ref": "#/$defs/block_id" },

              "new_block_id": { "$ref": "#/$defs/block_id" },
              "newBlockId": { "$ref": "#/$defs/block_id" },

              "kind_code": { "$ref": "#/$defs/kind_code" },
              "kindCode": { "$ref": "#/$defs/kind_code" },

              "text": { "type": "string" },
              "content": { "type": "string" }
            },
            "not": {
              "anyOf": [
                { "required": ["before"] },
                { "required": ["after"] }
              ]
            }
          }
        },

        {
          "if": {
            "properties": { "op": { "const": "suggest" } }
          },
          "then": {
            "required": ["block_id", "message"],
            "properties": {
              "block_id": { "$ref": "#/$defs/block_id" },
              "blockId": { "$ref": "#/$defs/block_id" },

              "message": {
                "type": "string",
                "minLength": 1
              },

              "severity": {
                "type": "string",
                "enum": ["low", "medium", "high"]
              }
            },
            "not": {
              "anyOf": [
                { "required": ["before"] },
                { "required": ["after"] }
              ]
            }
          }
        }
      ]
    }
  }
}
